{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"lib": ["es2020"],
		"types": ["node"]
	},
	"compileOnSave": true,
	"include": ["src.*ts", "src/**/*.ts"]
}
